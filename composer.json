{
  "name": "felixarntz/energieausweis-online-erstellen-network",
  "type": "project",
  "license": "GPLv3",
  "description": "The Energieausweis-Online-Erstellen.de Network.",
  "homepage": "https://www.energieausweis-online-erstellen.de/",
  "authors": [
    {
      "name": "Felix Arntz",
      "email": "hello@felix-arntz.me",
      "homepage": "http://felix-arntz.me"
    }
  ],
  "keywords": [
    "energieausweis-online-erstellen", "wp", "multisite", "network"
  ],
  "support": {
    "issues": "https://github.com/felixarntz/energieausweis-online-erstellen-network/issues"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.0",
    "composer/installers": "~1.0",
    "cweagans/composer-patches": "~1.0",
    "johnpbloch/wordpress-core-installer": "~1.0",
    "johnpbloch/wordpress-core": "4.9.8",
    "wpackagist-plugin/akismet": "4.0.7",
    "wpackagist-plugin/bootstrap-for-contact-form-7": "1.4.8",
    "wpackagist-plugin/contact-form-7": "5.0.2",
    "wpackagist-plugin/easy-digital-downloads": "2.9.3",
    "wpackagist-plugin/imagify": "1.7.1.3",
    "wpackagist-plugin/imsanity": "2.3.10",
    "wpackagist-plugin/lazy-load": "0.6.1",
    "wpackagist-plugin/login-lockdown": "v1.7.1",
    "wpackagist-plugin/really-simple-captcha": "2.0.1",
    "wpackagist-plugin/shariff": "4.5.2",
    "wpackagist-plugin/simple-analytics": "1.1.1",
    "wpackagist-plugin/vaultpress": "1.9.6",
    "wpackagist-plugin/wp-maintenance-mode": "2.2",
    "wpackagist-plugin/wp-postratings": "1.85"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "^1.0.0"
  },
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "public/core",
    "patches": {
      "wpackagist-plugin/easy-digital-downloads": {
        "Adjust EDD for WP-Energieausweis-Online plugin": "patches/edd-custom.diff"
      }
    }
  },
  "scripts": {
    "post-install-cmd": [
      "cd public/app/plugins/wp-energieausweis-online; composer install --no-dev; cd ../../../.."
    ],
    "config-phpcs": [
      "vendor/bin/phpcs --config-set installed_paths ../../wp-coding-standards/wpcs"
    ],
    "test": [
      "vendor/bin/phpcs --ignore=public/core/,vendor/ -n -s ."
    ]
  }
}
