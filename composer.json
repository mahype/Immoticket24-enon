{
  "name": "awsmug/enon",
  "type": "project",
  "license": "GPLv3",
  "description": "Energieausweis Online Erstellen Webseite",
  "homepage": "https://www.energieausweis-online-erstellen.de/",
  "authors": [
    {
      "name": "Sveb Wagener",
      "email": "sven@awesome.ug",
      "homepage": "https://awesome.ug"
    }
  ],
  "keywords": [
    "energieausweis-online-erstellen",
    "wp",
    "multisite",
    "network"
  ],
  "support": {
    "issues": "https://github.com/felixarntz/energieausweis-online-erstellen-network/issues"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories":[
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "vcs",
      "url" : "git@github.com:awsmug/edd-payment-stripe-sepa.git"
    },
    {
      "type": "vcs",
      "url" : "git@github.com:awsmug/enon-theme.git"
    },
    {
      "type": "vcs",
      "url" : "git@github.com:awsmug/jason.git"
    },
    {
      "type": "vcs",
      "url" : "git@github.com:awsmug/block-wave-separator.git"
    }
  ],
  "require": {
    "composer/installers": "~2.0.1",
    "cweagans/composer-patches": "~1.0",
    "johnpbloch/wordpress-core-installer": "~2.0",
    "johnpbloch/wordpress-core": "5.9.x-dev",

    "awsmug/edd-payment-stripe-sepa": "dev-master",
    "awsmug/enon-theme": "dev-main",
    "awsmug/jason": "dev-master",
    "awsmug/block-wave-separator": "dev-master",
    "felixarntz/plugin-lib": "dev-master",
    
    "wpackagist-plugin/akismet": "4.2.1",
    "wpackagist-plugin/acf-code-field": "1.8",
    "wpackagist-plugin/easy-digital-downloads": "2.11.4",
    "wpackagist-plugin/enable-jquery-migrate-helper": "1.3.0",
    "wpackagist-plugin/imagify": "1.10",
    "wpackagist-plugin/ninjafirewall": "4.4.3",
    "wpackagist-plugin/login-lockdown": "v1.8.1",
    "wpackagist-plugin/really-simple-captcha": "2.1",
    "wpackagist-plugin/shariff": "4.6.7",
    "wpackagist-plugin/simple-page-ordering": "2.3.4",
    "wpackagist-plugin/ootb-openstreetmap": "1.3.4",
    "wpackagist-plugin/user-switching": "1.5.8",
    "wpackagist-plugin/wordpress-importer":"0.7",
    "wpackagist-plugin/wordpress-seo": "17.8",
    "wpackagist-plugin/wp-postratings": "1.89"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "^1.0.0"
  },
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "public/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "public/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "public/core",
    "patches": {
      "wpackagist-plugin/easy-digital-downloads": {
        "Hack: EDD Recalculating total, because of missing VAT in sercices": "patches/edd-recalculate-total.diff",
        "Hack: EDD showing different value of entries on payment site": "patches/edd-payments-per-page.diff",
        "Hack: EDD fix for setting custom email sender": "patches/edd-custom-email-sender.diff"
      },
      "wpackagist-plugin/wp-postratings": {
        "Hack: WP Postratings - Adding name to property": "patches/wp-postratings.diff"
      },
      "felixarntz/wp-gdpr-cookie-notice": {
        "Hack: Inserting notice on top": "patches/wpgpdr-show-on-top.diff"
      }
    }
  },
  "scripts": {
    "post-install-cmd": [
      "cd public/app/plugins/wp-energieausweis-online; composer install --no-dev; cd ../../../..",
      "cd public/app/plugins/enon; composer install --no-dev; cd ../../../..",
      "cd public/app/plugins/enon-reseller; composer install --no-dev; cd ../../../..",
      "cd public/app/plugins/edd-payment-stripe-sepa; composer install --no-dev; cd ../../../.."
      
    ],
    "post-update-cmd": [
      "cd public/app/plugins/edd-payment-stripe-sepa; composer update --no-dev; cd ../../../..",
      "cd public/app/wpenon/enev2021-01/; composer update --no-dev; cd ../../../.."
    ],
    "config-phpcs": [
      "vendor/bin/phpcs --config-set installed_paths ../../wp-coding-standards/wpcs"
    ],
    "test": [
      "vendor/bin/phpcs --ignore=public/core/,vendor/ -n -s ."
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
