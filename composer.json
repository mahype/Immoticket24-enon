{
  "name": "felixarntz/energieausweis-online-erstellen-network",
  "type": "project",
  "license": "GPLv3",
  "description": "The Energieausweis-Online-Erstellen.de Network.",
  "homepage": "https://www.energieausweis-online-erstellen.de/",
  "authors": [
    {
      "name": "Felix Arntz",
      "email": "hello@felix-arntz.me",
      "homepage": "http://felix-arntz.me"
    }
  ],
  "keywords": [
    "energieausweis-online-erstellen",
    "wp",
    "multisite",
    "network"
  ],
  "support": {
    "issues": "https://github.com/felixarntz/energieausweis-online-erstellen-network/issues"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories":[
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.0",
    "composer/installers": "~1.0",
    "cweagans/composer-patches": "~1.0",
    "johnpbloch/wordpress-core-installer": "~1.0",
    "johnpbloch/wordpress-core": "5.4.1",
    "affiliate-wp/affiliate-wp": "^2.4.5",
    "wpackagist-plugin/akismet": "4.1.5",
    "wpackagist-plugin/acf-code-field": "1.8",
    "wpackagist-plugin/bootstrap-for-contact-form-7": "1.4.8",
    "wpackagist-plugin/classic-editor": "1.5",
    "wpackagist-plugin/contact-form-7": "5.1.7",
    "wpackagist-plugin/easy-digital-downloads": "2.9.23",
    "wpackagist-plugin/gutenberg": "7.9.1",
    "wpackagist-plugin/imagify": "1.9.9",
    "wpackagist-plugin/ninjafirewall": "4.1.1",
    "wpackagist-plugin/login-lockdown": "v1.8.1",
    "wpackagist-plugin/really-simple-captcha": "2.0.2",
    "wpackagist-plugin/shariff": "4.6.5",
    "wpackagist-plugin/vaultpress": "2.1.1",
    "wpackagist-plugin/wordpress-seo": "14.0.2",
    "wpackagist-plugin/wp-postratings": "1.87",
    "felixarntz/wp-gdpr-cookie-notice": "dev-master",
    "felixarntz/plugin-lib": "dev-master"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "^1.0.0"
  },
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "public/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "public/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "public/core",
    "patches": {
      "wpackagist-plugin/easy-digital-downloads": {
        "Hack: EDD Recalculating total, because of missing VAT in sercices": "patches/edd-recalculate-total.diff",
        "Hack: EDD showing different value of entries on payment site": "patches/edd-payments-per-page.diff",
        "Hack: EDD fix for setting custom email sender": "patches/edd-custom-email-sender.diff"
      },
      "felixarntz/wp-gdpr-cookie-notice": {
        "Hack: Inserting notice on top": "patches/wpgpdr-show-on-top.diff"
      }
    }
  },
  "scripts": {
    "post-install-cmd": [
      "cd public/app/plugins/wp-energieausweis-online; composer install --no-dev; cd ../../../..",
      "cd public/app/plugins/enon; composer install --no-dev; cd ../../../..",
      "cd public/app/plugins/enon_reseller; composer install --no-dev; cd ../../../..",
      "docker-compose stop",
      "docker-compose up -d"
    ],
    "config-phpcs": [
      "vendor/bin/phpcs --config-set installed_paths ../../wp-coding-standards/wpcs"
    ],
    "test": [
      "vendor/bin/phpcs --ignore=public/core/,vendor/ -n -s ."
    ]
  }
}
